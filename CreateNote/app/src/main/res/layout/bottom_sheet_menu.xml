<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@android:color/white">

    <!-- Color Picker -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thay đổi màu nền"
        android:textSize="16sp"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center">

        <View
            android:id="@+id/color1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@android:color/white" />

        <View
            android:id="@+id/color2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#FFCDD2" />

        <View
            android:id="@+id/color3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#D1C4E9" />

        <View
            android:id="@+id/color4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#C8E6C9" />

        <View
            android:id="@+id/color5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/white"
            android:layout_marginEnd="8dp"
            android:backgroundTint="#FFF9C4" />
    </LinearLayout>

    <!-- Menu Items -->
    <LinearLayout
        android:id="@+id/reminderOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_marginTop="16dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_recent_history"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Đặt lời nhắc"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:text="Không có"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noteTypeOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_edit"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Thay đổi loại ghi chú"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:text="Danh sách ..."
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/labelOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_info_details"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Gắn nhãn"
            android:textSize="16sp"
            android:textColor="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:text="Không có"
            android:textSize="14sp"
            android:textColor="#888888" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/attachmentOption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_share"
            app:tint="#000000" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Tệp đính kèm"
            android:textSize="16sp"
            android:textColor="#000000"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_gravity="center"
            android:text="Không có"
            android:textSize="14sp"
            android:textColor="#888888"/>
    </LinearLayout>

    <!-- Delete and Done Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa ghi chú"
            android:textSize="16sp"
            android:textColor="#FF0000"
            android:background="@android:color/transparent"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/doneButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hoàn thành"
            android:textSize="16sp"
            android:textColor="#00FF00"
            android:background="@android:color/transparent"/>
    </LinearLayout>

</LinearLayout>